
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/material-dashboard.css" rel="stylesheet" />
    <link href="~/Assets/css/login.css" rel="stylesheet" />
</head>

<body>

    <section class="material-half-bg">
    </section>
    <section class="login-content">
        <div class="logo">
            <img src="~/Assets/img/logo.png" />
        </div>
        <div class="login-box">
            <form class="login-form" id="loginForm">
                <h4 class="text-center">Inicio de sesión</h4>
                <div class="form-group">
                    <input class="form-control" type="text" id="cCorreo" name="cCorreo" placeholder="Correo" autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" id="cContrasenia" name="cContrasenia" placeholder="Contraseña">
                </div>
                <div class="form-group btn-container">
                    <br />
                    <button class="btn btn-iniciar btn-block" id="btnAdminLogin">Iniciar sesión</button>
                </div>
            </form>
        </div>

    </section>

    <script src="~/Assets/js/core/jquery.min.js"></script>
    <script src="~/Assets/js/jquery.validate.min.js"></script>
    <script src="~/Scripts/Inicio/Sesion.js"></script>
    <script src="~/Scripts/Inicio/ValidarFormularios.js"></script>
</body>
</html>
