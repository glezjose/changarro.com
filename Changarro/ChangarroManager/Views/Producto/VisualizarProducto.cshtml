@model Changarro.Model.tblCat_Producto
@{
    ViewBag.Title = "VisualizarProducto";
    Layout = "~/Views/Shared/_Modal.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <img src="~/Assets/img/react.png" />
    </div>
    <div class="col-md-8">
        <h3>@Html.DisplayFor(p => p.cNombre)</h3>
        <h4>@Html.DisplayFor(p => p.cDescripcion)</h4>

        <div class="row">
            <div class="col-md-8">
                Precio:<h5> $@Html.DisplayFor(p => p.dPrecio)</h5>
                Existencias:<h5> @Html.DisplayFor(p => p.iCantidad)</h5>

                <h5>Fecha de Registro: @Html.DisplayFor(p => p.dtFechaAlta)</h5>
                <h5>Fecha de Modificación: @Html.DisplayFor(p => p.dtFechaModificacion)</h5>

            </div>

        </div>

    </div>
</div>

@section footer{
    <button type="button" class="btn btn-secondary" data-dismiss="modal" value="candel"> Cerrar</button>
}