
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Titulo{
    Clientes
}

@section styles{

    <link href="~/Assets/css/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Assets/css/clientes.css" rel="stylesheet" />
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header left">
                    <div class="d-flex justify-content-end">
                        <div class="d-flex justify-content-start col-2">
                            <label class="switch" for="swichClientes">
                                <input type="checkbox" class="custom-control-input" id="swichClientes">
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <div class="d-flex justify-content-end col-10">
                            <button class="btn btn-info btn-round" id="btnVerDetalles">
                                <i class="ti-eye icon"></i>
                            </button>
                            <button class="btn btn-success btn-round" id="btnCambiarEstatus">
                                <i class="ti-check icon"></i>
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered nowrap" id="tblCliente" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th hidden scope="col">ID</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Teléfono</th>
                                    <th scope="col">Correo</th>
                                    <th scope="col">Estatus</th>
                                    <th hidden scope="col">Status</th>
                                    <th hidden scope="col">Fecha Alta</th>
                                    <th hidden scope="col">Fecha Baja</th>
                                    <th hidden scope="col">Fecha Modificación</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Assets/js/sweetalert2.all.min.js"></script>

    <script src="~/Assets/js/moment.min.js"></script>

    <script src="~/Scripts/Cliente/Cliente.js"></script>
}