<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-9" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Changarro Admin</title>
    <link rel="stylesheet" href="https://rawgit.com/lykmapipo/themify-icons/master/css/themify-icons.css">
    @*<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Assets/css/material-dashboard.css" rel="stylesheet" />
    <link href="~/Assets/css/datatables.min.css" rel="stylesheet" />
    <link href="~/Assets/css/demo.css" rel="stylesheet" />
    <link href="~/Assets/css/sweetalert2.min.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="orange" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            <div class="logo col-md-12">
                <p class="col-md-1"></p>
                <img src="~/Assets/img/logo.png" />
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Inicio", "Inicio")">
                            <i class="ti-home"></i>
                            <p>Principal</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Principal", "Cliente")">
                            <i class="ti-agenda"></i>
                            <p>Clientes</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("VerProductos", "Producto")">
                            <i class="ti-package"></i>
                            <p>Productos</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PerfilAdministrador", "PerfilDatosAdministrador")">
                            <i class="ti-user"></i>
                            <p>Perfil</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-warning bg-warning bg-gardient navbar-absolute fixed-top ">
                <div class="container-fluid">
                    @RenderSection("Titulo", required: false)
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @{
                                        Html.RenderAction("ObtenerNombreAdministrador", "Inicio");
                                    }
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                    <a class="dropdown-item" href="#">Perfil</a>
                                    <a class="dropdown-item" href="@Url.Action("CerrarSesion" , "Inicio")" id="btnCerrarSesion">Cerrar Sesión</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalGeneral" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">

    </div>

    <script>
        var ruta = "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority,Url.Content("~/"))"
    </script>
    <script src="~/Assets/js/core/jquery.min.js"></script>
    <script src="~/Assets/js/core/popper.min.js"></script>
    <script src="~/Assets/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/Assets/js/jquery.dataTables.min.js"></script>
    <script src="~/Assets/js/jquery.validate.min.js"></script>
    <script src="~/Assets/js/material-dashboard.js"></script>
    <script src="~/Assets/js/demo.js"></script>
    <script src="~/Assets/js/sweetalert2.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
