@{
    Layout = "~/Views/Shared/_Modal.cshtml";
}

@section header{
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Actualizar imagen</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="ti-close"></span>
        </button>
    </div>
}

<div class="dropzone"
     id="imagenPerfilDropzone">
</div>

@section footer{
    <div class="modal-footer">
        <a class="genric-btn default radius" href="#" data-dismiss="modal">Cancelar</a>
        <a href="#" class="genric-btn primary radius disabled" id="btnSubirImagen">Subir</a>
    </div>
}