
@{
    ViewBag.Title = "CancelarSuscripcion";
    Layout = "~/Views/Shared/_Modal.cshtml";
}

@section header{
    <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Cancelar suscripción</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="d-flex justify-content-center">
    <form class="form-inline">
        <div class="form-group mb-2">
            <label for="staticEmail2" class="sr-only">Email</label>
            <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="usuario@gmail.com">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="inputPassword2" class="sr-only">Contraseña</label>
            <input type="password" class="form-control" id="cContraseniaCancelar" placeholder="Contraseña">
        </div>
    </form>
</div>

@section footer{
    <div class="modal-footer">
        <a class="genric-btn default radius" href="#" data-dismiss="modal">Cancelar</a>
        <a href="#" class="genric-btn primary radius" id="btnCancelarSuscripcion">Aceptar</a>
    </div>
}